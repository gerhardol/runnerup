<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/step_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/title_spinner"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|fill_horizontal"
        android:orientation="horizontal"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/step_intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="27"
            android:gravity="center_vertical|start"
            android:text="@string/cool_down"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/step_duration_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center_vertical|start"
            android:text="@string/Duration" />

        <TextView
            android:id="@+id/step_duration_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_weight="50"
            android:gravity="center_vertical|end" />
    </TableRow>

    <TableRow
        android:id="@+id/step_row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|fill_horizontal"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:ignore="HardcodedText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="27"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/step_goal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center_vertical|start"
            android:text="@string/pace" />

        <TextView
            android:id="@+id/step_goal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_weight="50"
            android:gravity="center_vertical|end" />
    </TableRow>
</TableLayout>